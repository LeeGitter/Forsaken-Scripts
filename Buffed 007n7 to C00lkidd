-- Combine both scripts
local player = game.Players.LocalPlayer

-- Function to set skin tone to red
local function setSkinRed()
    local char = player.Character
    if char then
        for _, part in ipairs(char:GetChildren()) do
            if part:IsA("BasePart") and part.Name ~= "HumanoidRootPart" then
                part.Color = Color3.fromRGB(255, 0, 0)
            end
        end
    end
end

-- Run first script
loadstring(game:HttpGet("https://raw.githubusercontent.com/LeeGitter/Forsaken-Scripts/refs/heads/main/007n7%20C00lkidd%20skin", true))()

-- Run second script
loadstring(game:HttpGet("https://raw.githubusercontent.com/LeeGitter/Forsaken-Scripts/refs/heads/main/007n7%20Buffs", true))()

-- Keep skin red until respawn
task.spawn(function()
    while player.Character do
        setSkinRed()
        task.wait(0.5) -- reapply every 0.5s
    end
end)

-- Reapply after respawn
player.CharacterAdded:Connect(function()
    task.wait(1) -- small delay for character to load
    while player.Character do
        setSkinRed()
        task.wait(0.5)
    end
end)
