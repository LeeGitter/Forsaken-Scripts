local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Run the first loadstring (skin)
loadstring(game:HttpGet("https://raw.githubusercontent.com/LeeGitter/Forsaken-Scripts/refs/heads/main/007n7%20C00lkidd%20skin", true))()

-- Run the second loadstring (buffs)
loadstring(game:HttpGet("https://raw.githubusercontent.com/LeeGitter/Forsaken-Scripts/refs/heads/main/007n7%20Buffs", true))()

-- Color settings
local normalColor = Color3.fromRGB(255, 0, 0)       -- Red
local poisonedColor = Color3.fromRGB(174, 73, 156) -- #AE499C

-- Function to set skin color
local function setSkinColor(color)
    local char = player.Character
    if not char then return end
    for _, part in ipairs(char:GetChildren()) do
        if part:IsA("BasePart") and part.Name ~= "HumanoidRootPart" then
            part.Color = color
        end
    end
end

-- Set initial skin color to red
setSkinColor(normalColor)

-- Poison check loop
task.spawn(function()
    local char = player.Character
    if not char then return end

    while char.Parent do
        local poisoned = char:FindFirstChild("Poisoned")
        if poisoned then
            setSkinColor(poisonedColor)
        else
            setSkinColor(normalColor)
        end
        task.wait(0.2) -- check every 0.2 sec
    end
end)
